@page
@model FeRazorApp.Pages.Login.LogoutModel
@{
}

<form method="post">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-12 col-lg-4">
                <p>Tem certeza que deseja deslogar?</p>
                <p>
                    <button class="btn btn-primary" asp-page-handler="Logout">Sim</button>
                    <button class="btn btn-light m-lg-5 border-dark" asp-page-handler="DontLogout">Não</button>
                </p>
            </div>
        </div>
    </div>
</form>


